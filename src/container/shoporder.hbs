        {{total_price.text}} {{total_price.value}}
        <hr>
        <btn class="btn btn-primary mb-1">{{button.[0].text}}</btn>
        <br>
        <btn class="btn btn-outline-primary">{{button.[1].text}}</btn>
       
      {{/with}}
    </div>
  </div>
