<div class="m-4">
  {{#with navigation}}
  
    <div class='card'>
      <div class="row">
      {{#each links}}
        <div class='card-body col-2'>
          <a href='{{href}}' class='nav-link'>{{text}}</a>
        </div>
      {{/each}} 
    </div>
    </div>
  {{/with}}
