{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
  <section class="row-12">
  <div class="m-5">
   {{#with navigation}}
  
    <div class='card'>
      <div class="row">
      {{#each links}}
        <div class='card-body col-2'>
          <a href='{{href}}' class='nav-link'>{{text}}</a>
        </div>
      {{/each}} 
    </div>
    </div>
  {{/with}}

  {{#with newsBlock}}
   <h3 class="py-5 text-center">{{title}}</h3>
   <div class="row g-2">
   {{#each cards}}
   <div class="col-3">
    <div class="card">
      <div class="card text-bg-success">
    <div class="card-body text-center">
        <h6 class="card-title">{{title}}</h6>
        <span class="badge text-bg-warning rounded-pill text-uppercase">{{#if isTop}}<div>Top</div> {{/if}}</span>
        <span class="badge text-bg-danger rounded-pill text-uppercase">{{#if isNew}}<div>New</div> {{/if}}</span>
        <p>{{description}}</p>
    </div>
    </div>
   </div>
     </div>  
   {{/each}}
   </div>
  {{/with}}
  <br>
  <hr>

  {{#with goodsBlock}}
   <div class="row g-4">
    <div class="col-12">
        <div class="nav nav-tabs">
      <div class="nav-item">
        <a href="#" class="nav-link active">{{tabs.[0].text}}</a>
      </div>
      <div class="nav-item">
        <a href="#" class="nav-link">{{tabs.[1].text}}</a>
      </div>
      <div class="nav-item">
        <a href="#" class="nav-link">{{tabs.[2].text}}</a>
      </div>
      <div class="nav-item">
        <a href="#" class="nav-link">{{tabs.[3].text}}</a>
      </div>
   </div>
    </div>

     
     {{#each cards}}
      <div class="col-4">
    <div class="card">
    <img class="card-img-top" src="https://picsum.photos/1000/500" alt="Product photo">
    <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <span class="badge text-bg-warning rounded-pill">{{#if isHot}}<div>Hot</div> {{/if}}</span>
        <span class="badge text-bg-primary rounded-pill">{{#if isNew}}<div>New</div> {{/if}}</span>
      <p>{{description}}</p>
    </div>
   </div>
   </div>
   {{/each}}
  {{/with}}
  <br>
  <hr>

  <div class="alert alert-dark">
  {{#with subscribe}}
   <h2>{{header}}</h2>
   <p>{{description}}</p>
   {{#each buttons}}
    <btn class="btn btn-primary" href="{{link}}">{{text}}</btn>
   {{/each}}
  {{/with}}
  </div>
  <br>
  <hr>

  <div class="alert alert-success">
  {{#with service}}
  <h2 class="text-center">{{title}}</h2>
  <p class="text-center">{{description}}</p>
  {{#each buttons}}
  <btn class="btn btn-primary text-center" href="{{link}}">{{text}}</btn>
  {{/each}}
  {{/with}}
  </div>
  </div>
  <br>
  <hr>
   <div class="row">
  {{#each footer}}
   <div class="nav col-2">
    <div>
      {{#each this}}
       <div>
        <a class="nav-link" href="{{link}}">{{text}}</a>
       </div>
      {{/each}}
    </div>
   </div>
  {{/each}}
  </div>
  </section>
</div>

